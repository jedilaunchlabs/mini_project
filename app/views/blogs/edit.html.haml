- if @blog.is_draft?

  %h1 Edit Blog

  = form_for (@blog) do |f|
    - if @blog.errors.any?
      #error_explanation
        %h3
          = pluralize(@blog.errors.count, "error")
          prohibited this blog from being saved:
        %ul
          - @blog.errors.full_messages.each do |message|
            %li= message


    .hfield
      = f.text_area :image, :id => "image_base64_holder", style: "#{'display:none'}"
    .picture
      = f.file_field :image, :id => "image_upload", accept: 'image/jpeg,image/gif,image/png'
    .image_holder{:style => 'height:200px;width:200px;'}

    .picture
      = image_tag @blog.image_url(:thumb).to_s
    .field 
      = f.text_field :title, placeholder: "Title"
    .field 
      = f.text_field :caption, placeholder: "Content"
    .field 
      = f.text_area :description, placeholder: "Description"

    %select.js-example-basic-multiple{:name => "categories[]", :multiple => "multiple"}
      - @categories.each do |category|
        - if @blog.categories.include?(category)
          %option{:value => "#{category.id}", :selected => true}= category.name 
        - else
          %option{:value => "#{category.id}"}= category.name 

    .actions 
      = f.submit "Update"
    
    %br
    = link_to "Back", blogs_path